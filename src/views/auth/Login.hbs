{{!-- Ocultar Mostrar Contraseña --}}

<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", () => {

    const hideShowPassWord = document.getElementById("MostrarOcultarPassword"),
      password = document.getElementById("txtpassword");

    hideShowPassWord.addEventListener("click", () => {
      if (password.type === "password") {

        hideShowPassWord.innerHTML = `<i class="fas fa-eye-slash"></i>`;
        password.type = "text";
      } else {
        password.type = "password";
        var Estado = hideShowPassWord.innerHTML = `<i class='fas fa-eye'></i>`;
      }
    });
  });

</script>

<head>

  <title>Login</title>

</head>

<header>  
  
</header>

<body class="authentication-bg authentication-bg-pattern">

  {{!-- Contenido Login --}}
  <div class="account-pages mt-5 mb-5">
    <div class="container">
      {{> message }}
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
          <div class="card">

            <div class="card-body p-4">

              <div class="text-center w-75 m-auto">
                <span><img src="img/logo/logo-bar.png" alt="" height="100" width="300"></span>
              </div>

              {{!-- <h5 class="auth-title">Login</h5> --}}

              <form action="/Login" method="POST">
                <div class="form-row">
                  <div class="form-group col-sm-12 col-md-12 col-lg-12 col-xl-12">
