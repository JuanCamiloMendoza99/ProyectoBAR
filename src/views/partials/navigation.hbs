            if (permisosMenu === "Administrador") {
                const menuAdministrador = document.querySelectorAll('.menuAdministrador');
                //console.log(menuAdministrador.length);
                menuAdministrador.forEach(element => {
                    element.classList.remove('d-none');
                });
            } else if (permisosMenu === "Cajero") {
                const menuCajero = document.querySelectorAll('.menuCajero');
                //console.log(menuCajero.length);
                menuCajero.forEach(element => {
                    element.classList.remove('d-none');
                });
            } else if (permisosMenu === "Mesero") {
                const menuMesero = document.querySelectorAll('.menuMesero');
                //console.log(menuMesero.length);
                menuMesero.forEach(element => {
                    element.classList.remove('d-none');
                });
            }
        }
    });
</script>




